<html>
<head>
    {{>header}}
</head>
<body>
    <div class="page">
    <div class=centeredElements>
    <h2 class='title'>Sign In</h2>

        <div class='box'>
            <form method="POST" action="/login">
                <div class="form-group">
                    <label class='title' for="username">
                        User Name
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class='textInput'  id="username" name="username" placeholder="username" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class='title' for="password" >
                        Password
                    </label>
                    <div class="col-sm-10">
                        <input type="password" class='textInput' id="password" name="password"placeholder="password" required>
                    </div>
                </div>
                <button type="submit" value="Sign In" style='margin-top: 5%'> Sign In </button>
            </form>
        </div>
        </div>
    </div>
</body>
</html>