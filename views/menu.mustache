                    {{/isAdmin}}

                </div>
            </div>

            <div class='thinBox' >

                <div class='itemLeft'>
                    <img style='display:grid;'src={{imageUrl}} width='120' height='120' >
                </div>
                <div class='itemRight'>
                    <p> {{description}}</p>
                </div>
            </div>

        {{/food}}
    </div>

